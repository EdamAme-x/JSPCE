---
import BaseHead from './BaseHead.astro';

interface Props {
    title?: string;
    description?: string;
    image?: string;
}

const { title, description, image } = Astro.props as Props;

---
<html lang="ja">
    <BaseHead title={title ?? ""} description={description ?? ""} image={image ?? ""} />
    <body>
        <div id="__next" style={{ display: "contents" }}>
            <slot />
        </div>
    </body>
</html>