---
//@ts-ignore
import { SEO } from "astro-seo";

interface Props {
    title: string;
    description: string;
    image: string;
}

const { title, description, image } = Astro.props as Props;
const prefix = "og: http://ogp.me/ns# website: http://ogp.me/ns/website#";

---
<head prefix={prefix}>
   <SEO
      title={title}
      description={description}
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: image,
        }
      }}
      twitter={{
        creator: "@amex2189"
      }}
      extend={{
        link: [{ rel: "icon shortcut", href: image }],
        meta: [
          {
            name: "twitter:image",
            content: description
          },
          { name: "twitter:title", content: title },
          { name: "twitter:description", content: description },
        ],
      }}
    />
    <style id="__FRSH_TWIND"></style>
    <meta content="Lume vX.X.X" name="generator">
</head>